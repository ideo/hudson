{
  "connection": "default",
  "collectionName": "prompts",
  "info": {
    "name": "freeformprompt",
    "description": "Freeform Prompt is a provocation we put in front of the users that asks them to draw or write freely. "
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "provocation": {
      "default": "What's your favorite sandwich?",
      "type": "text",
      "required": true
    },
    "description": {
      "default": "Any additional description we might need to add. This is not user facing.",
      "type": "text"
    },
    "thankyoumessagetimeout": {
      "default": 5,
      "type": "integer",
      "required": true
    },
    "freeformentries": {
      "collection": "freeformentry",
      "via": "freeformprompt"
    },
    "installsite": {
      "default": "",
      "type": "text"
    },
    "campaign": {
      "model": "campaign",
      "via": "freeformprompts"
    },
    "thankyoumessage": {
      "default": "Thank you for sharing your thoughts! Your messages will appear on the screen throughout the night.",
      "type": "text"
    },
    "instructions": {
      "default": "",
      "type": "text"
    },
    "linethickness": {
      "default": 2,
      "type": "integer"
    },
    "linecolor": {
      "default": "#000000",
      "type": "string"
    }
  }
}